{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // ここに "DOM" を含める
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"] // <-- ここに "node" を追加することもありますが、@types/nodeをインストールすれば通常不要
  },
  "include": ["src", "vite.config.ts"], // <-- vite.config.ts を含める
  "references": [{ "path": "./tsconfig.node.json" }] // 必要に応じて
}
