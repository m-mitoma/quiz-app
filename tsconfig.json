// tsconfig.node.json
{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler", // または "node"
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["node"] // ★ここが一番重要です★
  },
  "include": [
    "vite.config.ts" // ★vite.config.ts がここに含まれているか確認★
    // "vitest.config.ts" // もしVitestを使っているなら
  ]
}
